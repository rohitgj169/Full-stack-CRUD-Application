<%- include('../partials/header') %>

<h3 class="center-align blue-grey lighten-4 z-depth-1">Task List</h3>

<section class="section">
  <% activities.forEach((act) =>{%>
  <div class="container task-container">
    <div class="row">
      <div class="col s12">
        <div class="card blue-grey darken-4 hoverable">
          <div class="card-content white-text">
            <span class="card-title"><%=act.title%></span>
            <p><%=act.description%></p>
          </div>
          <div class="card-action">
          
            <a class="btn-flat disabled">
              <i class="material-icons">event_note</i>
            <%=act.date.toLocaleString('en-us', {day:'numeric', month: 'long', year: 'numeric'})%>
          </a>
          </div>
          <div class="card-action right-align">
            <a href="/activities/<%=act._id%>" class="right-align">Show More</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% });%>
</section>

<div class="container">
  <a
    href="/activities/new"
    class="btn-floating btn-large waves-effect waves-light orange right "
  >
    <i class="material-icons blue-grey-text text-darken-2">add</i>
  </a>
</div>

<%- include('../partials/footer') %>
