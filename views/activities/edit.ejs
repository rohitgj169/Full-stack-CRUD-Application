<%- include('../partials/header') %>

<blockquote class="orange-accent-2">
  <h4>Edit Details</h4>
</blockquote>
<div class="row">
  <div class="col s12 l8">
    <form action="/activities/<%=activity._id%>?_method=PUT" method="POST">
      
      <label for="title">Task Title</label>
      <input type="text" name="title" value="<%=activity.title%>" />
      <br />
      <label for="description">Description:</label>
      <textarea
        class="materialize-textarea"
        name="description"
        value="<%=activity.description%>"
      ></textarea>
      <br /><br /><br />
      <button
        class="btn waves-effect waves-light blue-grey darken-4 orange-text text-accent-2"
        type="submit"
        name="edit"
      >Edit
        <i class="material-icons right">edit</i>
      </button>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
